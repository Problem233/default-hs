{
  "version": "0.1.0",
  "isShellCommand": true,
  "command": "zsh",
  "args": ["-c"],
  "showOutput": "always",
  "suppressTaskName": true,
  "tasks": [
    {
      "isBuildCommand": true,
      "taskName": "compile with clang++",
      "args": ["FILENAME=$(basename -s .cpp \"${file}\") && clang++ -std=c++11 -o ./exe/$FILENAME ${file}"]
    },
    {
      "taskName": "compile with g++",
      "args": ["FILENAME=$(basename -s .cpp \"${file}\") && g++ -o ./exe/$FILENAME ${file}"]
    }
  ]
}
