{
  "version": "0.1.0",
  "command": "%USERPROFILE%\\Software\\stack.bat",
  "args": ["exec", "--", "bash", "-c"],
  "isShellCommand": true,
  "showOutput": "always",
  "suppressTaskName": true,
  "tasks": [
    {
      "taskName": "stack build",
      "args": ["stack build"]
    },
    {
      "isBuildCommand": true,
      "taskName": "stack clean & build",
      "args": ["stack clean && stack build"]
    }
  ]
}
