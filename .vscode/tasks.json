{
  "version": "0.1.0",
  "isShellCommand": true,
  "command": "%USERPROFILE%\\Software\\stack.bat",
  "args": ["exec", "--", "bash", "-c"],
  "showOutput": "always",
  "suppressTaskName": true,
  "tasks": [
    {
      "isBuildCommand": true,
      "taskName": "compile with g++",
      "args": ["SOURCE=$(cygpath \\\"${file}\\\") && FILENAME=$(basename -s .cpp $SOURCE) && g++ -std=c++14 -I . -o ./exe/$FILENAME.exe $SOURCE"]
    }
  ]
}
